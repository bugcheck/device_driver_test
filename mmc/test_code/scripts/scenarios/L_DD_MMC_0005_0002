# Begin L_DD_MMC_0005_0002

# Clean up
01  set -x; rm -rf $MMC_MOUNT_POINT_1 $MMC_MOUNT_POINT_2; exit 0
02  set -x; mkdir -p $MMC_MOUNT_POINT_1 && mkdir -p $MMC_MOUNT_POINT_2; exit 0

# Creating, verifying and printing partition
03  set -x; $TESTSCRIPT/umount_partitions.sh $DEFAULT_MOUNT_POINT && exit 0 || exit 1
04  set -x; echo -e "n\n p\n 1\n $MMC_DEVICE_SECTOR_START\n $MMC_DEVICE_SECTOR_END\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1
05  set -x; cat $PROCFS_PARTITIONS | grep $MMC_PARTITION_NAME1 && exit 0 || exit 1
06  set -x; $TESTSCRIPT/umount_partitions.sh $DEFAULT_MOUNT_POINT && exit 0 || exit 1
07  set -x; echo -e "p\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1

# Formatting partition
08  set -x; $TESTSCRIPT/umount_partitions.sh $DEFAULT_MOUNT_POINT && exit 0 || exit 1
09  set -x; sleep 1 && $TESTBIN/mke2fs $MMC_PARTITION_ENTRY1 && exit 0 || exit 1

# Mounting and verifying partition
10  set -x; mount -t ext2 $MMC_PARTITION_ENTRY1 $MMC_MOUNT_POINT_1 && exit 0 || exit 1
11  set -x; mount | grep $MMC_PARTITION_ENTRY1 | grep "ext2" && exit 0 || exit 1

12  set -x; mmc_test_dev0 1 testing1 && mmc_test_dev0 1 testing2 && exit 0 || exit 1
13  set -x; mmc_test_dev0 2 testing1 10 && mmc_test_dev0 2 testing2 10 && exit 0 || exit 1
14  set -x; mmc_test_dev0 3 testing1 10 && exit 0 || exit 1
15  set -x; mmc_test_dev0 4 testing1 && exit 0 || exit 1
16  set -x; mmc_test_dev0 5 testing1 && exit 0 || exit 1
17  set -x; mmc_test_dev0 6 testing1 test && exit 0 || exit 1
18  set -x; mmc_test_dev0 7 && exit 0 || exit 1
19  set -x; mmc_test_dev0 8 test 777 && exit 0 || exit 1
20  set -x; mmc_test_dev0 9 newdir && exit 0 || exit 1
21  set -x; mmc_test_dev0 10 $MMC_MOUNT_POINT_1/test newdir && exit 0 || exit 1
22  set -x; mmc_test_dev0 11 testing2 200308171820 && exit 0 || exit 1
23  set -x; mmc_test_dev0 12 newdir rendir && exit 0 || exit 1
24  set -x; mmc_test_dev0 13 $MMC_MOUNT_POINT_1/testing2 $MMC_MOUNT_POINT_1/rendir/
25  set -x; mmc_test_dev0 14 rendir 123
26 set -x; mmc_test_dev0 15 $MMC_MOUNT_POINT_1/rendir/test && mmc_test_dev0 15 $MMC_MOUNT_POINT_1/rendir/testing2 && mmc_test_dev0 15 $MMC_MOUNT_POINT_1/test && exit 0 || exit 1
27  set -x; mmc_test_dev0 16 rendir && exit 0 || exit 1
28  set -x; mmc_test_dev0 17 $TESTROOT/$FILE_SIZE_BIG $MMC_MOUNT_POINT_1 && exit 0 || exit 1
29  set -x; mmc_test_dev0 18 $TESTROOT/$FILE_SIZE_SMALL $MMC_MOUNT_POINT_1 && exit 0 || exit 1
30  set -x; cp $TESTROOT/$FILE_SIZE_BIG $MMC_MOUNT_POINT_1 && mmc_test_dev0 19 $MMC_MOUNT_POINT_1/$FILE_SIZE_BIG $TMPBASE && exit 0 || exit 1
31  set -x; cp -r $TESTROOT/$FILE_SIZE_SMALL $MMC_MOUNT_POINT_1 && mmc_test_dev0 20 $MMC_MOUNT_POINT_1/$FILE_SIZE_SMALL $TMPBASE && exit 0 || exit 1
32  set -x; mmc_test_dev0 21 && exit 0 || exit 1
33  set -x; mmc_test_dev0 24 testing && exit 0 || exit 1
34  set -x; mmc_test_dev0 9 dir && mmc_test_dev0 25 dir && exit 0 || exit 1
35  set -x; mmc_test_dev0 1 testing3 && mmc_test_dev0 26 testing3 && exit 0 || exit 1

# Unmounting partition
36  set -x; umount $MMC_MOUNT_POINT_1 && sync && exit 0 || exit 1

# Mounting and verifying partition
37  set -x; mount -t ext2 $MMC_PARTITION_ENTRY1 $MMC_MOUNT_POINT_1 && exit 0 || exit 1
38  set -x; mount | grep $MMC_PARTITION_ENTRY1 | grep "ext2" && exit 0 || exit 1

# Unmounting partition
39  set -x; umount $MMC_MOUNT_POINT_1 && sync && exit 0 || exit 1

# Removing partitions
40  set -x; $TESTSCRIPT/umount_partitions.sh $DEFAULT_MOUNT_POINT && exit 0 || exit 1
41  set -x; echo -e "d\n w\n" | fdisk $MMC_ROOT_ENTRY && exit 0 || exit 1

# Verifying partitions
42  set -x; cat $PROCFS_PARTITIONS | grep $MMC_PARTITION_NAME1 && exit 1 || exit 0

# End L_DD_MMC_0005_0002
