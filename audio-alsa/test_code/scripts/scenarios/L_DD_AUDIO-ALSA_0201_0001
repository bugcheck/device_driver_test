# Begin L_DD_AUDIO-ALSA_0201_0001

01 set -x; amixer cset numid=34 1 && exit 0 || exit 1
02 set -x; amixer cset numid=36 1 && exit 0 || exit 1
03 set -x; amixer cset numid=35 2 && exit 0 || exit 1
04 set -x; amixer cset numid=37 2 && exit 0 || exit 1
05 set -x; amixer cset numid=7 18 && exit 0 || exit 1
07 set -x; aplay $STEREO_AUDIO_FILE"8000.wav" && exit 0 || exit 1
09 set -x; aplay $STEREO_AUDIO_FILE"11025.wav" && exit 0 || exit 1
11 set -x; aplay $STEREO_AUDIO_FILE"12000.wav" && exit 0 || exit 1
13 set -x; aplay $STEREO_AUDIO_FILE"16000.wav" && exit 0 || exit 1
15 set -x; aplay $STEREO_AUDIO_FILE"22050.wav" && exit 0 || exit 1
17 set -x; aplay $STEREO_AUDIO_FILE"24000.wav" && exit 0 || exit 1
19 set -x; aplay $STEREO_AUDIO_FILE"32000.wav" && exit 0 || exit 1
21 set -x; aplay $STEREO_AUDIO_FILE"44100.wav" && exit 0 || exit 1
23 set -x; aplay $STEREO_AUDIO_FILE"48000.wav" && exit 0 || exit 1

# End L_DD_AUDIO-ALSA_0201_0001
