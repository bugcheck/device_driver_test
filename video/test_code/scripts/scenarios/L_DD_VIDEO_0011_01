# Begin "L_DD_VIDEO_0011_01"

COMMENT comment.sh "Verify the background color of the canvas can be configured"
#switch GFX/Video pipelines from lcd to tv
0001_GFX set -x; tv_lcd_switch.sh  1 0 "720,574" "720,574" "0,0" && exit 0 || exit 1
0001_VD1 set -x; tv_lcd_switch.sh 1 1 && exit 0 || exit 1
0001_VD2 set -x; tv_lcd_switch.sh 1 2 && exit 0 || exit 1

0001_SAN set -x;tv_lcd_switch.sh 1 1 && exit 0 || exit 1
0001 set -x; background.sh "16711680"&& exit 0 || exit 1
0001 set -x; background.sh "123456"&& exit 0 || exit 1
0001 set -x; background.sh "765432"&& exit 0 || exit 1

#switch GFX/Video pipelines from tv to lcd
0001_GFX set -x;tv_lcd_switch.sh  0 0 "800,480" "800,480" "0,0" && exit 0 || exit 1
0001_VD1 set -x;tv_lcd_switch.sh 0 1 && exit 0 || exit 1
0001_VD2 set -x;tv_lcd_switch.sh 0 2 && exit 0 || exit 1

# End "L_DD_VIDEO_0011_01"
