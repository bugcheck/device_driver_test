# Begin "L_DD_VIDEO_0010"

COMMENT comment.sh "Verify the background color of the canvas can be configured"
COMMENT comment.sh "Disabling GFX"
0001 echo 0 > /sys/devices/platform/omapdss/overlay0/enabled & exit 0 || exit 1
0001 set -x; background.sh "1" "123456" && exit 0 || exit 1
0001 set -x; background.sh "1" "765432" && exit 0 || exit 1
COMMENT_INT comment.sh "Enabling GFX"
0001 echo 1 > /sys/devices/platform/omapdss/overlay0/enabled && exit 0 || exit 1

# End "L_DD_VIDEO_0010"
